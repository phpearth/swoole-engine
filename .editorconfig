# http://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml,xml,xml.dist}]
indent_style = space
indent_size = 4

[.travis.yml]
indent_style = space
indent_size = 2
